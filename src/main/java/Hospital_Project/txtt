 public static Status hastaDurumuBul(String aktuelDurum) {

        Status hastaDurumu = new Status();
        boolean aciliyet = false;

        switch (aktuelDurum) {
            case "Allerji":
                aciliyet = false;
                break;
            case "Bas Agrisi":
                aciliyet = false;
                break;
            case "Diabet":
                aciliyet = false;
                break;
            case "Soguk Alginligi":
                aciliyet = false;
                break;
            case "Migren":
                aciliyet = true;
                break;
            case "Kalp hastaliklari":
                aciliyet = true;
                break;
            default:
                System.out.println("Gecerli bir durum degil");


        }